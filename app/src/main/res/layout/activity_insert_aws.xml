<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rtbi.wba.Insert_aws">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/area"
        android:background="@drawable/custom_textview"
        android:padding="8dp"
        android:hint="Area of Water Spread at F.T.L"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hm"
        android:background="@drawable/custom_textview"
        android:padding="8dp"
        android:hint="Max.Depth of The Tank (Hm)"
        android:layout_below="@+id/area"
        android:layout_marginBottom="10dp"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bund"
        android:background="@drawable/custom_textview"
        android:padding="8dp"
        android:hint="Length Of Bund"
        android:layout_below="@+id/hm"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/save"
        android:layout_below="@+id/bund"
        android:text="Save"
        android:background="@drawable/custom_button"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        />

</RelativeLayout>
