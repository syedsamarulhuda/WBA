<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rtbi.wba.Edit_Runoff">

    <ScrollView
        android:fillViewport="true"
        android:id="@+id/area"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:scrollbarAlwaysDrawVerticalTrack="@bool/abc_action_bar_embed_tabs"
        tools:context="com.example.rtbi.wba.From">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="#F0F0F0"
            android:orientation="vertical">


            <EditText
                android:id="@+id/rainfall_date"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_textview"
                android:ems="10"
                android:hint="Rainfall Date"
                android:inputType="date"
                android:layout_marginBottom="10dp"
                android:padding="12dp" />

            <EditText
                android:id="@+id/rainfall_mm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_textview"
                android:ems="10"
                android:hint="Rainfall mm"
                android:inputType="numberDecimal"
                android:layout_marginBottom="10dp"
                android:padding="12dp" />

            <EditText
                android:id="@+id/rainfall_inches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_textview"
                android:ems="10"
                android:hint="Rainfall Inches"
                android:inputType="numberDecimal"
                android:layout_marginBottom="10dp"
                android:padding="12dp" />

            <EditText
                android:id="@+id/zero_five_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_textview"
                android:ems="10"
                android:hint="0.05S"
                android:inputType="numberDecimal"
                android:layout_marginBottom="10dp"
                android:padding="12dp" />

            <EditText
                android:id="@+id/zero_ninefive_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_textview"
                android:ems="10"
                android:hint="0.95S"
                android:inputType="numberDecimal"
                android:layout_marginBottom="10dp"
                android:padding="12dp" />


            <EditText
                android:id="@+id/r_zero_five_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_textview"
                android:ems="10"
                android:hint="R-0.05S"
                android:inputType="numberDecimal"
                android:layout_marginBottom="10dp"
                android:padding="12dp" />

            <EditText
                android:id="@+id/r_zero_five_sqr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_textview"
                android:ems="10"
                android:hint="(R-0.05S)sqr"
                android:inputType="numberDecimal"
                android:layout_marginBottom="10dp"
                android:padding="12dp" />

            <EditText
                android:id="@+id/r_zero_ninefive_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_textview"
                android:ems="10"
                android:hint="(R+0.95S)"
                android:inputType="numberDecimal"
                android:layout_marginBottom="10dp"
                android:padding="12dp" />


            <EditText
            android:id="@+id/peffective_inches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_textview"
            android:ems="10"
            android:hint="Peffective inches"
                android:inputType="numberDecimal"
            android:layout_marginBottom="10dp"
            android:padding="12dp" />

            <EditText
                android:id="@+id/peffective_meter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_textview"
                android:ems="10"
                android:hint="Peffective meters"
                android:inputType="numberDecimal"
                android:layout_marginBottom="10dp"
                android:padding="12dp" />


            <EditText
                android:id="@+id/catchment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_textview"
                android:ems="10"
                android:hint="Catchment in meters"
                android:inputType="numberDecimal"
                android:layout_marginBottom="10dp"
                android:padding="12dp" />

            <EditText
                android:id="@+id/volume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_textview"
                android:ems="10"
                android:hint="Volume of Runoff"
                android:inputType="numberDecimal"
                android:layout_marginBottom="10dp"
                android:padding="12dp" />

            <Button
                android:id="@+id/edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:textStyle="bold"
                android:background="@drawable/custom_button"
                android:text="Edit"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff"
                />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
